{% extends "base.html.twig" %}
{% block content %}
<h2>Safe preview (không khai thác được)</h2>

<div style="margin: 8px 0 16px;">
  <a href="/index.php" class="btn btn-outline">← Quay về trang có lỗ hổng</a>
</div>

<form method="get" action="/safe.php">
  <input type="text" name="q" value="{{ q|e }}" placeholder="Nhập nội dung…">
  <button type="submit">Gửi</button>
</form>

<div class="card">
  <strong>Output (được escape an toàn):</strong>
  <div class="result">{{ q }}</div> {# auto-escape của Twig #}
</div>
{% endblock %}